<creditcruncher>

  <!-- ============================================================== -->
  <!--                       PARAMETERS                               -->
  <!-- ============================================================== -->
  <params>
    <property name="time.begindate" value="18/02/2003"/>
    <property name="time.steps" value="12"/>
    <property name="time.steplength" value="2"/>
    <property name="stopcriteria.maxiterations" value="5000"/>
    <property name="stopcriteria.maxseconds" value="30000000"/>
    <property name="copula.type" value="normal"/>
    <property name="copula.seed" value="387650932"/>
    <property name="montecarlo.antithetic" value="false"/>
    <property name="portfolio.onlyActiveClients" value="true"/>
  </params>

  <!-- ============================================================== -->
  <!--                       INTERESTS                                -->
  <!-- ============================================================== -->
  <interests>
    <interest name="spot" date="18/11/2004">
      <rate t="0" r="0.0"/>
      <rate t="1" r="0.04"/>
      <rate t="2" r="0.041"/>
      <rate t="3" r="0.045"/>
      <rate t="6" r="0.0455"/>
      <rate t="12" r="0.048"/>
      <rate t="24" r="0.049"/>
      <rate t="60" r="0.05"/>
      <rate t="120" r="0.052"/>
    </interest>
  </interests>

  <!-- ============================================================== -->
  <!--                           RATINGS                              -->
  <!-- ============================================================== -->
  <ratings>
    <rating name="AAA" order="1" desc="AAA desc"/>
    <rating name="AA" order="2" desc="AA desc"/>
    <rating name="A" order="3" desc="A desc"/>
    <rating name="BBB" order="4" desc="BBB desc"/>
    <rating name="BB" order="5" desc="BB desc"/>
    <rating name="B" order="6" desc="B desc"/>
    <rating name="CCC" order="7" desc="CCC desc"/>
    <rating name="Default" order="8" desc="Default desc"/>
  </ratings>

  <!-- ============================================================== -->
  <!--                     TRANSITION MATRIX                          -->
  <!-- ============================================================== -->
  <mtransitions period="1" epsilon="1e-12">

    <transition from="AAA"     to="AAA"     value="0.9081"/>
