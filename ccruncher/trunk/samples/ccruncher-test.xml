    <transition from="AAA"     to="B"       value="0.0000"/>
    <transition from="AAA"     to="CCC"     value="0.0000"/>
    <transition from="AAA"     to="Default" value="0.0000"/>
        
    <transition from="AA"      to="AAA"     value="0.0070"/>
    <transition from="AA"      to="AA"      value="0.9065"/>
    <transition from="AA"      to="A"       value="0.0779"/>
    <transition from="AA"      to="BBB"     value="0.0064"/>
    <transition from="AA"      to="BB"      value="0.0006"/>
    <transition from="AA"      to="B"       value="0.0014"/>
    <transition from="AA"      to="CCC"     value="0.0002"/>
    <transition from="AA"      to="Default" value="0.0000"/>
    
    <transition from="A"       to="AAA"     value="0.0009"/>
    <transition from="A"       to="AA"      value="0.0227"/>
    <transition from="A"       to="A"       value="0.9105"/>
    <transition from="A"       to="BBB"     value="0.0552"/>
    <transition from="A"       to="BB"      value="0.0074"/>
    <transition from="A"       to="B"       value="0.0026"/>
    <transition from="A"       to="CCC"     value="0.0001"/>
    <transition from="A"       to="Default" value="0.0006"/>

    <transition from="BBB"     to="AAA"     value="0.0002"/>
    <transition from="BBB"     to="AA"      value="0.0033"/>
    <transition from="BBB"     to="A"       value="0.0595"/>
    <transition from="BBB"     to="BBB"     value="0.8693"/>
    <transition from="BBB"     to="BB"      value="0.0530"/>
    <transition from="BBB"     to="B"       value="0.0117"/>
    <transition from="BBB"     to="CCC"     value="0.0012"/>
    <transition from="BBB"     to="Default" value="0.0018"/>

    <transition from="BB"      to="AAA"     value="0.0003"/>
    <transition from="BB"      to="AA"      value="0.0014"/>
    <transition from="BB"      to="A"       value="0.0067"/>
    <transition from="BB"      to="BBB"     value="0.0773"/>
