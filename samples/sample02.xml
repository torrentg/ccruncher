<ccruncher>

  <!-- ============================================================== -->
  <!--                       PARAMETERS                               -->
  <!-- ============================================================== -->
  <params>
    <property name="time.begindate" value="01/01/2005"/>
    <property name="time.steps" value="12"/>
    <property name="time.steplength" value="1"/>
    <property name="stopcriteria.maxiterations" value="20000"/>
    <property name="stopcriteria.maxseconds" value="30000000"/>
    <property name="copula.type" value="gaussian"/>
    <property name="copula.seed" value="0"/>
    <property name="montecarlo.antithetic" value="false"/>
    <property name="portfolio.onlyActiveClients" value="true"/>
  </params>

  <!-- ============================================================== -->
  <!--                       INTERESTS                                -->
  <!-- ============================================================== -->
  <interests>
    <interest name="spot" date="01/01/2005">
      <rate t="0" r="0.0"/>
      <rate t="1" r="0.0"/>
      <rate t="2" r="0.0"/>
      <rate t="3" r="0.0"/>
      <rate t="6" r="0.0"/>
      <rate t="12" r="0.0"/>
      <rate t="24" r="0.0"/>
      <rate t="60" r="0.0"/>
      <rate t="120" r="0.0"/>
    </interest>
  </interests>

  <!-- ============================================================== -->
  <!--                           RATINGS                              -->
  <!-- ============================================================== -->
  <ratings>
    <rating name="A" order="1" desc="alive"/>
    <rating name="E" order="2" desc="death"/>
  </ratings>

  <!-- ============================================================== -->
  <!--                     TRANSITION MATRIX                          -->
  <!-- ============================================================== -->
  <mtransitions period="12" epsilon="1e-12">
    <transition from="A" to="A" value="0.90"/>
    <transition from="A" to="E" value="0.10"/>
    <transition from="E" to="A" value="0.00"/>
    <transition from="E" to="E" value="1.00"/>
  </mtransitions>

  <!-- ============================================================== -->
  <!--                           SECTORS                              -->
  <!-- ============================================================== -->
  <sectors>
    <sector name="S1" order="1" desc="unique sector"/>
  </sectors>

  <!-- ============================================================== -->
  <!--                        CORRELATIONS                            -->
  <!-- ============================================================== -->
  <mcorrels epsilon="1e-12">
    <sigma sector1="S1" sector2="S1" value="0.0"/>
  </mcorrels>

  <!-- ============================================================== -->
  <!--                       SEGMENTATIONS                            -->
  <!-- ============================================================== -->
  <segmentations>
    <segmentation name="portfolio" components="asset"/>
  </segmentations>

  <!-- ============================================================== -->
  <!--                         PORTFOLIO                              -->
  <!-- ============================================================== -->
  <portfolio>
    <client rating="A" sector="S1" name="001" id="001">
      <asset name="generic" id="op1">
        <data>
          <values at="01/01/2005" cashflow="0.0" recovery="0.0" />
          <values at="01/01/2006" cashflow="1.0" recovery="0.0" />
        </data>
      </asset>
    </client>
    <client rating="A" sector="S1" name="002" id="002">
      <asset name="generic" id="op1">
        <data>
          <values at="01/01/2005" cashflow="0.0" recovery="0.0" />
          <values at="01/01/2006" cashflow="1.0" recovery="0.0" />
        </data>
      </asset>
    </client>
  </portfolio>

</ccruncher>
